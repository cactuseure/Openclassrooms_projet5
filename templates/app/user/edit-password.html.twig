{% extends 'app/user/account.html.twig' %}
{% block page_title %}Modification de mot de passe{% endblock page_title %}
{% block content %}
<form action="" method="POST">
    <div class="card mb-3" style="border-radius: .5rem;">
        <div class="row g-0">
            <div class="col-md-4 gradient-custom text-center text-white"
                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                     alt="Avatar" class="img-fluid my-5" style="width: 80px;"/>
                <h5>{{ session.user.firstName }} {{ session.user.lastName }}</h5>
                <p>@{{ session.user.username }}</p>
                <i class="far fa-edit mb-5"></i>
            </div>
            <div class="col-md-8">
                <div class="card-body p-4">
                    <h6>Modification de mot de passe :</h6>
                    <hr class="mt-0 mb-4">
                    <div class="row pt-1">
                        <div class="col-6 mb-3">
                            <h6><label for="last_password">Ancien mot de passe</label></h6>
                            <input type="password" id="last_password" name="last_password" class="form-control" required>
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-6 mb-3">
                            <h6><label for="password">Nouveau mot de passe</label></h6>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                        <div class="col-6 mb-3">
                            <h6><label for="confirmPassword">Confirmer le mot de passe</label></h6>
                            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
                        </div>
                    </div>
                    <hr class="mt-0 mb-4">
                    <div class="row pt-1">
                        <div class="col-6 mb-3">
                            <a href="/edit-password">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </a>
                        </div>
                    </div>
                    {% if message_success %}
                        <div class="alert alert-success">{{ message_success }}</div>
                    {% endif %}
                    {% if message_error %}
                        <div class="alert alert-danger">{{ message_error }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}