{% extends 'base.html.twig' %}

{% block page_title %}Mot de passe oublié{% endblock %}
{% block class_css %}mot-de-passe-oublie{% endblock %}


{% block body %}
    <div class="container d-flex align-items-center justify-content-center vh-100">
        <div class="card w-50">
            <div class="card-body">
                <h1 class="card-title text-center">Mot de passe oublié</h1>
                <p class="card-text text-center">Entrez votre adresse e-mail pour réinitialiser votre mot de passe.</p>

                {% if message_success %}
                    <div class="alert alert-success">{{ message_success }}</div>
                {% endif %}
                {% if message_error %}
                    <div class="alert alert-danger">{{ message_error }}</div>
                {% endif %}

                <form action="" method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email :</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}