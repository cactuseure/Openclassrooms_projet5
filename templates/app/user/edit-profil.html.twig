{% extends 'app/user/account.html.twig' %}
{% block page_title %}Modification de profil{% endblock page_title %}
{% block content %}
    <form action="/edit-profil" method="POST">
        <div class="card mb-3" style="border-radius: .5rem;">
            <div class="row g-0">
                <div class="col-md-4 gradient-custom text-center text-white"
                     style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                         alt="Avatar" class="img-fluid my-5" style="width: 80px;"/>
                    <h5>{{ session.user.firstName }} {{ session.user.lastName }}</h5>
                    <p>@{{ session.user.username }}</p>
                    <i class="far fa-edit mb-5"></i>
                </div>
                <div class="col-md-8">
                    <div class="card-body p-4">
                        <h6>Information</h6>
                        {% if error is not null %}
                            <div class="alert alert-danger">{{ error }}</div>
                        {% endif %}
                        <hr class="mt-0 mb-4">
                        <div class="row pt-1">
                            <div class="col-6 mb-3">
                                <h6><label for="firstName">Pr√©nom</label></h6>
                                <input type="text" id="firstName" name="firstName" class="form-control"
                                       value="{{ session.user.firstName }}" required>
                            </div>
                            <div class="col-6 mb-3">
                                <h6><label for="lastName">Nom</label></h6>
                                <input type="text" id="lastName" name="lastName" class="form-control"
                                       value="{{ session.user.lastName }}" required>
                            </div>
                        </div>
                        <div class="row pt-1">
                            <div class="col-6 mb-3">
                                <h6><label for="username">Pseudo</label></h6>
                                <input type="text" id="username" name="username" class="form-control"
                                       value="{{ session.user.username }}" required>
                            </div>
                            <div class="col-6 mb-3">
                                <h6><label for="email">Email</label></h6>
                                <input type="email" id="email" name="email" class="form-control"
                                       value="{{ session.user.email }}" required>
                            </div>
                        </div>
                        <div class="row pt-1">
                            <div class="col-6 mb-3">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}