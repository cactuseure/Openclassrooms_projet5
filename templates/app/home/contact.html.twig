{% extends 'base.html.twig' %}

{% block page_title %}Contact{% endblock %}

{% block body %}
    <div class="container">
        <form action="/contact" method="POST">
            <div class="form-row">
                <div class="col">
                    <label for="name">Nom</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                    {% if errors.name %}
                        <div class="alert alert-danger">{{ errors.name }}</div>
                    {% endif %}
                </div>
                <div class="col">
                    <label for="lastname">Pr√©nom</label>
                    <input type="text" class="form-control" id="lastname" name="lastname" required>
                    {% if errors.lastname %}
                        <div class="alert alert-danger">{{ errors.lastname }}</div>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="email">E-mail de contact</label>
                <input type="email" class="form-control" id="email" name="email" required>
                {% if errors.email %}
                    <div class="alert alert-danger">{{ errors.email }}</div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" id="message" name="message" required></textarea>
                {% if errors.message %}
                    <div class="alert alert-danger">{{ errors.message }}</div>
                {% endif %}
            </div>
            {% if message_success %}
                <div class="alert alert-success">{{ message_success }}</div>
            {% endif %}
            {% if message_error %}
                <div class="alert alert-danger">{{ message_error }}</div>
            {% endif %}
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </form>
    </div>
{% endblock %}
