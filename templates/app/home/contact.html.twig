{% extends 'base.html.twig' %}

{% block page_title %}Accueil{% endblock %}
{% block class_css %}homepage{% endblock %}

{% block body %}
    {% if notification.exist %}
        <div class="notification notification-{{ notification.type }} fixed-bottom fixed-right">
            {{ notification.message }}
        </div>
    {% endif %}

    <div class="container">
        <form action="/contact" method="POST">
            <div class="form-group">
                <label for="name">Nom/Pr√©nom</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">E-mail de contact</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" id="message" name="message" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Envoyer</button>
        </form>
    </div>
{% endblock body %}
