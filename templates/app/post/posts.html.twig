{% extends 'base.html.twig' %}

{% block page_title %}Articles{% endblock %}
{% block class_css %}articles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Les articles :</h1>
        <h2>Les plus tendance :</h2>
        <div class="row">
            {% for post in posts %}
            <div class="col-md-4">
                <a href="/article/{{ post.slug }}">
                    <div class="card mb-4">
                        <img src="{{ post.thumbnail }}" alt="image de l'article" class="card-img-top">
                        <div class="card-body">
                            <h3 class="card-title">{{ post.title }}</h3>
                            <p class="card-text">{{ post.updatedAt|date('d/m/Y') }}</p>
                            <div class="card-text">{{ post.hat|raw }}</div>
                        </div>
                    </div>
                </a>
            </div>
            {% if loop.index % 3 == 0 %}
        </div><div class="row">
            {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}